{
  "name": "page-recorder",
  "version": "0.1.0",
  "scripts": {
    "install": "typings install",
    "start": "yarn run clean-development && yarn run webpack-dev-server -- --config=webpack.config.development.js --hot --inline",
    "build": "yarn run clean-production && yarn run webpack -- --config=webpack.config.production.js",
    "pack": "cd dist/production && zip -r ../PageRecorder.zip * && cd ../..",
    "clean": "yarn run clean-development && yarn run clean-production",
    "clean-development": "rm -rf dist/development/*",
    "clean-production": "rm -rf dist/production/*"
  },
  "dependencies": {
    "copy-webpack-plugin": "^4.0.1",
    "generate-json-webpack-plugin": "^0.2.1",
    "html-webpack-plugin": "^2.24.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0",
    "ts-loader": "^0.9.5",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "typings": "^1.5.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2",
    "write-file-webpack-plugin": "^3.4.2"
  }
}
